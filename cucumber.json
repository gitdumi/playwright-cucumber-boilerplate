{
  "default": {
    "parallel": 1,
    "format": [
      "progress-bar",
      "html:cucumber-report.html"
    ],
    "featurePaths": [
      "tests/features/**/*.feature"
    ],
    "require": [
      "tests/steps/**/*.ts",
      "support/**/*.ts",
      "runner/**/*.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "publishQuiet": true,
    "timeout": 0
  }
}
